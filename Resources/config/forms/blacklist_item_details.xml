<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>blacklist_item_details</key>

    <properties>
        <property name="pattern" type="text_line" mandatory="true">
            <meta>
                <title>sulu_community.pattern</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>
        </property>

        <property name="type" type="single_select" mandatory="true">
            <meta>
                <title>sulu_community.type</title>
            </meta>

            <params>
                <param name="default_value" value="block"/>

                <param name="values" type="collection">
                    <param name="block">
                        <meta>
                            <title>sulu_community.block</title>
                        </meta>
                    </param>
                    <param name="request">
                        <meta>
                            <title>sulu_community.request</title>
                        </meta>
                    </param>
                </param>
            </params>
        </property>
    </properties>
</form>
